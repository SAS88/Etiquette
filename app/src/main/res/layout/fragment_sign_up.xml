<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="pk.edu.pucit.mian.loginapp.SignUp"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"

        android:src="@drawable/sign_up_text"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"

        android:layout_marginTop="67dp"
        android:src="@drawable/logo" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signup_email"
        android:layout_marginTop="44dp"
        android:background="@drawable/email"
        android:hint="Phone Number/Email"
        android:lines="1"
        android:maxLength="25"
        android:maxLines="1"
        android:singleLine="true"
        android:textAlignment="center"
        android:gravity="center"
        android:inputType="textEmailAddress" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signup_password"
        android:background="@drawable/password"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:lines="1"
        android:maxLines="1"
        android:password="true"
        android:singleLine="true"
        android:maxLength="25" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signup_button"

        android:layout_marginTop="22dp"
        android:background="@drawable/sign_up_button" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/goto_login"

        android:layout_marginTop="40dp"
        android:src="@drawable/already_have_account"
        android:clickable="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:src="@drawable/terms_and_conditions"

        android:layout_marginTop="76dp" />

</LinearLayout>
